FROM node:20-alpine

# Устанавливаем системные зависимости для Prisma
RUN apk add --no-cache openssl

WORKDIR /usr/src/app

# Копируем package.json и устанавливаем зависимости
COPY package*.json ./
RUN npm install

# Копируем весь исходный код (включая prisma/schema.prisma)
COPY . .

# Генерируем Prisma Client ПОСЛЕ копирования schema.prisma
RUN npx prisma generate

# Собираем проект для создания папки dist с main.js
RUN npm run build

# Запускаем в режиме разработки с watch
CMD ["npm", "run", "start:dev"]